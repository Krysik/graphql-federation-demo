type Review @key(fields: "id") {
  id: ID!
  title: String!
  content: String!
}

type Query {
  reviews: [Review!]!
}

extend type Movie @key(fields: "id") {
  id: ID!
  reviews: [Review!]!
}

input NewReview {
  title: String!
  content: String!
}

type Mutation {
  createReview(input: NewReview!): Review!
}
